{% extends "adminLayout.html.twig" %}

{% block title %}
    Administration des produits
{% endblock %}

{% block content %}

    <div class="container">

        {% if message != null %}
            <div class="alert alert-{{ status|default('info') }} text-center">
                {{ message }}
            </div>
        {% endif %}

        {# #L’attribut «enctype»,indique à PHP que toutes les informations relatives à notre fichier doivent être stockées sous la forme d’un tableau au travers de la variable globale «$_FILES» #}

        <div class="m-3">
            <form action="" method="POST" enctype="multipart/form-data">
                <div class="m-3">

                    <div class="nb-3">
                        <label for="email" class="form-label">Adresse e-mail</label>
                        <input
                                type="text"
                                class="form-control"
                                id="email"
                                name="email"
                                value="{{ form.email }}"
                        />
                    </div>

                    <div class="nb-3">
                        <label for="firstname" class="form-label">Prénom</label>
                        <input
                                type="text"
                                class="form-control"
                                id="firstname"
                                name="firstname"
                                value="{{ form.firstname }}"
                        />
                    </div>

                    <div class="nb-3">
                        <label for="lastname" class="form-label">Nom</label>
                        <input
                                type="text"
                                class="form-control"
                                id="lastname"
                                name="lastname"
                                value="{{ form.lastname }}"
                        />
                    </div>

                    <div class="nb-3">
                        <label for="idRole" class="form-label">Role</label>
                        <select
                                class="form-select"
                                name="idRole"
                                id="idRole"
                        >
                            {% for role in roles %}
                                <option
                                        value="{{ role.id }}"
                                        {% if role.id == form.idRole %} selected {% endif %}
                                >
                                    {{ role.label }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                <a
                        href="/?page=adminProductList"
                        class="btn btn-secondary"
                >
                    <i class="fa-sharp fa-solid fa-arrow-left-long"></i>
                     
                    Retourner à la liste
                </a>

                <button type="submit" class="btn btn-primary">
                    <i class="fa-sharp fa-solid fa-floppy-disk"></i>
                     
                    {#            #vérifier la valeur de la variable controller. Selon la valeur de cette variable, une étiquette différente sera insérée dans le bouton. #}
                    {% if controller == 'add' %}
                        Ajouter
                    {% else %}
                        Modifier
                    {% endif %}
                </button>


            </form>
        </div>

    </div>


{% endblock %}