{% extends "layout.html.twig" %}

{% block title %}
    Bienvenue sur le Shop !
{% endblock %}

{% block content %}
<div class="container">
    <p class="test-primary">Liste des produits:</p>
</div>
{% for product in products %}
 <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img class="img-fluid rounded-start" src="https://fakeimg.pl/350x200/?text=Produit" alt="coucou" />
            </div>

            <div class="col-md-6 d-flex align-items-center">
                <div class="card-body">
                    <h5 class="card-title">{{product.label}}</h5>
                    <p class="card-text">{{product.description}}</p>
                    
                    <a href="#" class="btn btn-primary">Voir le produit</a>
                </div>
            </div>

            <div class="col-md-2 d-flex align-items-center">
                <div class="card-body d-flex justify-content-center">
                    <h5 class="text-primary">{{product.price}}</h5>
                </div>
            </div>
        </div>
    </div>
    {% endfor %} 
    
{% endblock %}  

